# PostgreSQL 資料庫配置
POSTGRES_DB=goat_nutrition_db
POSTGRES_USER=goat_user
POSTGRES_PASSWORD=goat_password

# Flask 應用程式配置
SECRET_KEY=your-very-secret-key-change-in-production-environment
FLASK_ENV=production
FLASK_DEBUG=False

# CORS 配置 (允許的前端來源)
CORS_ORIGINS=http://localhost,http://127.0.0.1,https://your-domain.com

# Google Gemini API 金鑰
GOOGLE_API_KEY=your-gemini-api-key-here

# JWT 配置
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=86400

# 應用程式設定
APP_NAME=領頭羊博士營養管理系統
APP_VERSION=1.0.0
